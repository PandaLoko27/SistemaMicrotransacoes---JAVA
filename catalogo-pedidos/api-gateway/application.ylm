server:
  port: 8080

spring:
  application:
    name: api-gateway
  cloud:
    gateway:
      routes:
        - id: produto-service
          uri: lb://produto-service
          predicates:
            - Path=/produtos/**
        - id: pedido-service
          uri: lb://pedido-service
          predicates:
            - Path=/pedidos/**
eureka:
  client:
    service-url:
      defaultZone: http://localhost:8761/eureka
